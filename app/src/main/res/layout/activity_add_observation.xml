<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddObservationActivity">
    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_button"
                android:contentDescription="Back"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Observation"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <EditText
            android:id="@+id/observationNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Observation Name"
            android:minHeight="48dp"/>
        <EditText
            android:id="@+id/observationCommentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observation Comment"
            android:minHeight="48dp"/>
        <EditText
            android:id="@+id/observationTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observation Time"
            android:minHeight="48dp"/>
        <ImageButton
            android:id="@+id/timePickerButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_clock"
            android:contentDescription="Select Time"
            android:layout_gravity="end"/>
        <ImageView
            android:id="@+id/observationImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/addImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/addObservationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Observation"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
